<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:background="@drawable/img_background_1"
    tools:context=".Activity.MyWeightLossGoalActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1">

        <TableRow>

            <TextView
                android:text="@string/my_target_weight"
                android:padding="12sp"
                android:layout_margin="10sp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/target_weight_edit_text"
                android:hint="@string/enter_weight"
                android:textColor="@color/black"
                android:background="@drawable/rectangle_drawable"
                android:gravity="right"
                android:padding="7sp"
                android:inputType="numberDecimal"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="@string/my_weekly_target"
                android:padding="12sp"
                android:layout_margin="10sp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/weekly_target_edit_text"
                android:hint="@string/enter_weekly_target"
                android:textColor="@color/black"
                android:background="@drawable/rectangle_drawable"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:padding="7sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/your_BMR"
                android:padding="12sp"
                android:layout_margin="10sp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/BMR_mwl"
                android:hint="@string/wait_for_calculate"
                android:textColor="@color/black"
                android:background="@drawable/rectangle_drawable"
                android:gravity="right"
                android:padding="7sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:padding="12sp"
                android:text="@string/absorb_heat"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/absorb"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_drawable"
                android:gravity="right"
                android:hint="@string/wait_for_calculate"
                android:padding="7sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/suggest"
                android:padding="10sp"
                android:layout_marginTop="1sp"
                android:layout_marginLeft="12sp"
                android:layout_span="2"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/consume_heat"
                android:padding="12sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/consume"
                android:hint="@string/wait_for_calculate"
                android:textColor="@color/black"
                android:background="@drawable/rectangle_drawable"
                android:gravity="right"
                android:padding="7sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/consume_suggest"
                android:hint="@string/wait_for_suggest"
                android:padding="10sp"
                android:layout_marginTop="1sp"
                android:layout_marginLeft="12sp"
                android:layout_span="2"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>

    </TableLayout>

