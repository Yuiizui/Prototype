<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context="com.example.nthucs.prototype.Activity.TestJsoup">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onSubmit"
    android:padding="6dp"
    android:layout_margin="2dp"
    android:id="@+id/update_button"
    android:text="current page"
    android:textColor="@color/black"
    android:textSize="20sp"
    android:background="@drawable/bar_color"
    android:layout_alignParentBottom="true"
   />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSubmit"
        android:padding="6dp"
        android:layout_margin="2dp"
        android:id="@+id/next_page_button"
        android:text="next page"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/bar_color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/update_button"
        android:layout_alignStart="@+id/update_button">
    <TableRow>
        <TextView
            android:text="Food name"
            android:padding="12dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/Write_Food_Name"
            android:background="@drawable/rectangle_drawable"
            android:gravity="right"
            android:padding="7dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>
        <TableRow>
            <TextView
                android:text="Food's information "
                android:padding="12dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/heat_select"
                android:background="@drawable/rectangle_drawable"
                android:gravity="left"
                android:padding="7dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>
    </TableLayout>

</RelativeLayout>
